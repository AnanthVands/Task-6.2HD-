<%- include('header') %>
<header>
    <div class="container-fluid">
        <h1>The Book Haven</h1>
    </div>
</header>
<main>
    <h2>Reviews</h2>

    <div class="container">
        <div class="row">
            <% reviews.forEach(review => { %>
            <div class="col-12 mb-4">
                <div class="card card-background">
                        <h3><strong> <%= review.bookTitle %> by <%= review.authorName %></strong></h3>
                        <p class="card-text"><strong>Rating:</strong> <%= review.rating %> stars</p>
                        <p class="card-text"><%= review.reviewContent %></p>
                        <p class="card-title">Reviewer: <%= review.name %></p>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <div class="container mt-5">
        <h2 class=" mb-4">Submit a Book Review</h2>
        <form action="/submitReview" method="POST">
            <div class="form-group mb-4">
                <label for="name">Your Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
            </div>
            <div class="form-group mb-4">
                <label for="bookTitle">Book Title</label>
                <input type="text" class="form-control" id="bookTitle" name="bookTitle" placeholder="Enter the book title" required>
            </div>
            <div class="form-group mb-4">
                <label for="authorName">Author Name</label>
                <input type="text" class="form-control" id="authorName" name="authorName" placeholder="Enter the author's name" required>
            </div>
            <div class="form-group mb-4">
                <label class="col-form-label">Rating</label>
                <div class="text-primary">
                    <div class="form-check form-check-inline star-rating">
                        <input class="form-check-input" type="radio" name="rating" id="inlineRadio1" value="1" required>
                        <label class="form-check-label" for="inlineRadio1">&#9733;</label>
                    </div>
                    <div class="form-check form-check-inline star-rating">
                        <input class="form-check-input" type="radio" name="rating" id="inlineRadio2" value="2" required>
                        <label class="form-check-label" for="inlineRadio2">&#9733;&#9733;</label>
                    </div>
                    <div class="form-check form-check-inline star-rating">
                        <input class="form-check-input" type="radio" name="rating" id="inlineRadio3" value="3" required>
                        <label class="form-check-label" for="inlineRadio3">&#9733;&#9733;&#9733;</label>
                    </div>
                    <div class="form-check form-check-inline star-rating">
                        <input class="form-check-input" type="radio" name="rating" id="inlineRadio4" value="4" required>
                        <label class="form-check-label" for="inlineRadio4">&#9733;&#9733;&#9733;&#9733;</label>
                    </div>
                    <div class="form-check form-check-inline star-rating">
                        <input class="form-check-input" type="radio" name="rating" id="inlineRadio5" value="5" required>
                        <label class="form-check-label" for="inlineRadio5">&#9733;&#9733;&#9733;&#9733;&#9733;</label>
                    </div>
                </div>
            </div>
            <div class="form-group mb-4">
                <label for="reviewContent">Your Review</label>
                <textarea class="form-control" id="reviewContent" name="reviewContent" rows="5" placeholder="Write your review here" required></textarea>
            </div>
            <div class="text-center mt-4 mb-4">
                <button type="submit" class="btn custom-btn">Submit Review</button>
            </div>
        </form>
    </div>
</main>
<div class="text-center mt-4 mb-4">
    <a href="/list" class="btn custom-btn">See a full list of our books!</a>
</div>
<%- include('footer') %>